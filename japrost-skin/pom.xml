<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>de.japrost</groupId>
    <artifactId>japrost-parent</artifactId>
    <version>5-SNAPSHOT</version>
  </parent>

  <artifactId>japrost-skin</artifactId>
  <version>1-SNAPSHOT</version>

  <name>JaProSt Skin</name>
  <description>The Skin for JaProSt project sites</description>
  <url>${japrost.project.url}/${japrost.site.project.path}/</url>

  <properties>
    <japrost.site.project.path>skin</japrost.site.project.path>
  </properties>

  <!-- this is where all the stuff goes to -->
  <distributionManagement>
    <site>
      <id>${japrost.distribution.site.id}</id>
      <name>JaProSt-Site</name>
      <url>${japrost.distribution.site.url}/${japrost.site.project.path}/</url>
    </site>
  </distributionManagement>

  <scm>
    <developerConnection>scm:${japrost.scm.base}/${project.artifactId}</developerConnection>
  </scm>
</project>