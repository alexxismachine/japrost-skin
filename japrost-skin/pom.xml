<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.japrost</groupId>
		<artifactId>japrost-parent</artifactId>
		<version>4</version>
	</parent>

	<artifactId>japrost-skin</artifactId>
	<version>1-SNAPSHOT</version>

	<name>JaProSt Skin</name>
	<description>The Skin for JaProSt project sites</description>
	<url>${japrostProjectUrl}skin/</url>

	<properties>
		<japrost.site.path>skin/</japrost.site.path>
	</properties>

	<!-- this is where all the stuff goes to -->
	<distributionManagement>
		<site>
			<id>JaProStDistributionInternal</id>
			<!-- remote site is staged<url>sftp://ssh.strato.de/japrost/</url> -->
			<url>file:/srv/sites/japrost/${japrost.site.path}</url>
		</site>
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>${japrost.distribution.releases.id}</id>
			<name>Releases</name>
			<url>${japrost.distribution.releases.url}</url>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>${japrost.distribution.snapshots.id}</id>
			<name>Snapshots</name>
			<url>${japrost.distribution.snapshots.url}</url>
		</snapshotRepository>
	</distributionManagement>

	<!-- this is where all the stuff comes from -->
	<scm>
		<connection>scm:hg:http://abba:18080/scm/hg/japrost/japrost-skin</connection>
		<developerConnection>scm:hg:http://abba:18080/scm/hg/japrost/japrost-skin</developerConnection>
	</scm>

</project>